@page "{restaurantId:int}"
@model RestaurantApp.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Details";
}

<h4>@Model.Restaurant.Name</h4>
<div>
    Id:@Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>

@if(Model.InfoMessage != null)
{
    <div class="alert alert-info">@Model.InfoMessage</div>
}
<a asp-page="./List" class="btn btn-light">All Restaurants</a>

