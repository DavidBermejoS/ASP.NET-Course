@page
@model RestaurantApp.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>
<br />

<div>
    <h5>Welcome Messages:</h5>
    <ul>
        <li>@Model.Message</li>
        <li>@Model.Message_properties</li>
    </ul>
</div>

<br />
<div>
    <h4>RESTAURANTS TABLE</h4>
    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control" asp-for="SearchTerm"/>
                <span class="input-group-button">
                    <button class="btn btn-info">
                        <!--Glyphicon is not supported in Bootstrap 4-->
                        <!--<i class="glyphicon glyphicon-search" aria-hidden="true">Search</i>-->
                        <i class="">Search</i>
                    </button>
                </span>
            </div>
        </div>
    </form>
    <h6>Saved In Memory:</h6>
    <table class="table">
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.Cuisine</td>
                <td>
                    <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                        <i>Details</i>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>