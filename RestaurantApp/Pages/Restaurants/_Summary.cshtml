@using RestaurantApp.Core
@model Restaurant

<div class="card m-2">
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span> 
    </div>
    <div class="card-footer">
        <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <span style="font-size: 22px; line-height: 1em;" class="iconify"  data-icon="mdi:account-details" data-inline="false"></span>
        </a>
        <a class="btn btn-warning" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <span style="font-size: 22px; line-height: 1em;" class="iconify" data-icon="mdi:account-edit" data-inline="false"></span>
        </a>
        <a class="btn btn-danger" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <span style="font-size: 22px; line-height: 1em;" class="iconify" data-icon="mdi:trash-can-outline" data-inline="false"></span>
        </a>
    </div>
</div>
